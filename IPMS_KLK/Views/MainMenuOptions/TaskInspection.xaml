<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IPMS_KLK.Views.MainMenuOptions.TaskInspection"
             NavigationPage.HasBackButton="True">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#ffffff" Offset="0.1" />
            <GradientStop Color="#F9DED7" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>


    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="0,5,0,5"/>
                <Setter Property="Margin" Value="20,10,20,0"/>
                <Setter Property="CornerRadius" Value="20"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="TextTransform" Value="None"/>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="FontFamily" Value="sfBlack"/>
            </Style>

            <Style TargetType="Label">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="sfBlack"/>
            </Style>

            <Style TargetType="Entry">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="PlaceholderColor" Value="DarkGray"/>
                <Setter Property="ClearButtonVisibility" Value="WhileEditing"/>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="MaxLength" Value="8"/>
            </Style>

            <Style TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="BorderColor" Value="DarkGray"/>
                <Setter Property="CornerRadius" Value="20"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="Padding" Value="0"/>
            </Style>

            <Style TargetType="ImageButton">
                <Setter Property="Source" Value="scan.png"/>
                <Setter Property="BackgroundColor" Value="Transparent"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="0,20,0,0">
            <Label Text="TASK INSPECTION" HorizontalOptions="CenterAndExpand" FontSize="Large"/>
            
            <StackLayout>
                <Frame Margin="30,10,30,0">
                    <Label x:Name="BunchCCounting_pg1_OC_Name"
                       Text="OC :135-LADANG SERAPOH"
                       HorizontalOptions="CenterAndExpand"/>
                </Frame>
                
            </StackLayout>

            <Grid VerticalOptions="Center" Padding="20,10,20,0" ColumnSpacing="10" RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="1. Worker ID" Grid.Row="0" Grid.Column="0"/>
                <Label Text="2. Field No" Grid.Row="1" Grid.Column="0"/>
                <Label Text="3. Task No" Grid.Row="2" Grid.Column="0"/>
                <Label Text="4. Direction Type" Grid.Row="3" Grid.Column="0"/>

                <Frame Grid.Row="0" Grid.Column="1">
                    <Entry x:Name="TaskInspection_WorkerID_Entry"/>
                </Frame>
                <Frame Grid.Row="1" Grid.Column="1">
                    <Entry x:Name="TaskInspection_FieldNo_Entry"/>
                </Frame>
                <Frame Grid.Row="2" Grid.Column="1">
                    <Entry x:Name="TaskInspection_TaskNo_Entry"/>
                </Frame>
                <StackLayout RadioButtonGroup.GroupName="Direction_Type"  Grid.Row="3" Grid.Column="1">
                    <RadioButton TextColor="Black" Content="P&lt;&lt;" Value="Left" IsChecked="True" x:Name="start_from_left"/>
                    <RadioButton TextColor="Black" Content="&gt;&gt;P" Value="Right" x:Name="start_from_right"/>
                </StackLayout>
                

                <ImageButton Grid.Row="0" Grid.Column="2" x:Name="btn_ScanFieldNo"/>
                <ImageButton Grid.Row="1" Grid.Column="2" x:Name="btn_ScanTaskNo"/>
                <ImageButton Grid.Row="2" Grid.Column="2" x:Name="btn_ScanCutterID"/>
                <Button Grid.Row="3" Grid.Column="2" Text="Reset" Grid.RowSpan="2" Margin="0"
                        BackgroundColor="Red" x:Name="btn_TaskInspection_Reset"/>

            </Grid>

            <StackLayout Margin="20,0,20,0" VerticalOptions="EndAndExpand">
                <Button Text="Next" >
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#f8dba4" Offset="0.1" />
                            <GradientStop Color="#e09082" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                    
                </Button>
                <Button Text="Print Summary" IsEnabled="True">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#f8dba4" Offset="0.1" />
                            <GradientStop Color="#e09082" Offset="1.0" />
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Image Source="klk_logo.png" HeightRequest="50" WidthRequest="50" Margin="0,0,0,10"/>

            </StackLayout>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>