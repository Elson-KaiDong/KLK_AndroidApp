<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IPMS_KLK.Views.MainMenuOptions.GeneralWorker" 
             xmlns:lottie="clr-namespace:Lottie.Forms;assembly=Lottie.Forms">


    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#ffffff" Offset="0.1" />
            <GradientStop Color="#FBF7D5" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="TextTransform" Value="None"/>
                <Setter Property="FontFamily" Value="sfBlack"/>
                <Setter Property="Padding" Value="10,10,10,10"/>
                <Setter Property="VerticalOptions" Value="FillAndExpand"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="Margin" Value="0,0,0,2"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="BackgroundColor" Value="#faefbe"/>
            </Style>

            <Style TargetType="Frame">
                <Setter Property="BackgroundColor" Value="DarkGray"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="CornerRadius" Value="30"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="0,0,0,0">

            
                <StackLayout Margin="30,5,0,0">
                    <Grid>
                        <lottie:AnimationView Animation="Resources.farmer.json"
                         AnimationSource="EmbeddedResource"
                         RepeatMode="Infinite"
                         AutoPlay="True"
                         HeightRequest="200"
                         VerticalOptions="EndAndExpand"
                         Margin="100,0,0,0"/>
                        <StackLayout Margin="0,0,10,0" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand">
                            <Label Text="General"
                               FontSize="40"  
                               TextColor="Black"
                               FontFamily="passion"/>
                            <Label Text="Worker"
                               FontSize="40"  
                               TextColor="Black"
                               FontFamily="passion"/>                         
                        </StackLayout>                       
                    </Grid>
                </StackLayout>
            
            
                    <StackLayout VerticalOptions="FillAndExpand" Margin="20,5,20,0">
                        <Grid  ColumnSpacing="20" RowSpacing="20" VerticalOptions="FillAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40*"/>
                                <RowDefinition Height="40*"/>
                                <RowDefinition Height="40*"/>
                                <RowDefinition Height="40*"/>
                                <RowDefinition Height="40*"/>
                                <RowDefinition Height="40*"/>
                                <RowDefinition Height="70*"/>
                                <RowDefinition Height="70*"/>
                        </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                        <!--Guided by Job-->
                            <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" x:Name="guidedByJob_frame" >
                            <Button Text="Guided by Job" x:Name="guidedByJob_btn"
                                        Command="{Binding GeneralWorker_to_GuidedByJobCommand}" 
                                        >                                    
                                </Button>
                            </Frame>


                        <!--Guided by Vehicle-->
                    <Frame Grid.Row="4" Grid.Column="0" Grid.RowSpan="4" x:Name="guidedByVehicle_frame">
                            <Button Text="Guided by Vehicle" x:Name="guidedByVehicle_btn"
                                        Command="{Binding GeneralWorker_to_GuidedByVehicleCommand}"
                                        >                                    
                                </Button>
                            </Frame>

                        <!--Add New Job-->
                        <Frame Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" x:Name="addNewJob_frame">
                            <Button Text="Add New Job" x:Name="addNewJob_btn"
                                    Command="{Binding GeneralWorker_to_AddNewJobCommand}">
                            </Button>
                        </Frame>

                        <!--Add New Vehicle-->
                            <Frame  Grid.Row="3" Grid.Column="1" Grid.RowSpan="3"  x:Name="addNewVehicle_frame">
                            <Button Text="Add New Vehicle" x:Name="addNewVehicle_btn"
                                    Command="{Binding GeneralWorker_to_AddNewVechicleCommand}"
                                   >                                    
                                </Button>
                            </Frame>

                            <!--    <Line X1="0" Y1="0" X2="500" Y2="0" Stroke="black" 
                                  StrokeThickness="2"
                                  StrokeDashArray="1,1"
                                  StrokeDashOffset="10"  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"  Margin="0"/>      

                    <Label Text="Others"
                                   FontSize="Title"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"                                   
                                   Padding="0,0,0,0"
                                   TextColor="Black"
                                   FontFamily="Cool"
                                   Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"/> -->

                        <!--Print Receipt-->
                            <Frame  Grid.Row="6" Grid.Column="1" x:Name="printReceipt_frame">
                            <Button Text="Print Receipt" x:Name="printReceipt_btn"  
                                        Command="{Binding GeneralWorker_to_PrintReceiptCommand}"
                                        >
                                   
                                            
                                </Button>
                            </Frame>

                        <!--Show Total Emp-->
                            <Frame Grid.Row="7" Grid.Column="1" x:Name="showTotalEmp_frame">
                            <Button Text="Show Total Emp" x:Name="showTotalEmp_btn"
                                Command="{Binding GeneralWorker_to_ShowTotalEmpCommand}" 
                                >                                    
                                </Button>
                            </Frame>
                        </Grid>        
                    </StackLayout>  

                    <Image Source="klk_logo.png" HeightRequest="50" WidthRequest="50" VerticalOptions="EndAndExpand" Margin="0,0,0,10"/>
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>